# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration for DynamoDB
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Table Names (optional - defaults provided)
DYNAMODB_INTERACTIONS_TABLE=AgentInteractions
DYNAMODB_STRATEGIES_TABLE=AgentStrategies
DYNAMODB_TOOL_METRICS_TABLE=ToolMetrics
DYNAMODB_CONFLICTS_TABLE=StrategyConflicts
DYNAMODB_KNOWLEDGE_GAPS_TABLE=KnowledgeGaps

# Memory System Configuration (optional)
MEMORY_ENABLED=true
MEMORY_LEARNING_ENABLED=true
